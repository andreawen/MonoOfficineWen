doctype html
html(lang='en')
  head
    title= title
    style.
      table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
      }
      td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      }
      tr:nth-child(even) {
      background-color: #dddddd;
      }    
  body
    table
      each ric in list
        tr
          th Evento
          th Data
          th Ora 
          th Via
          th Tag
        tr
          td #{ric.titolo}
          td #{ric.data}
          td #{ric.ora}
          td #{ric.via}
          td #{ric.tag}
          